{% extends "base.html" %}

{% block title %}Search - Garage Inventory{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">üîç Search Inventory</h1>
        
        <!-- Search Form -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <form method="GET" action="{{ url_for('search') }}" class="row g-3">
                    <!-- Search Query -->
                    <div class="col-md-6">
                        <label for="q" class="form-label">Search Term</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="q" 
                            name="q" 
                            placeholder="Search boxes or items..."
                            value="{{ query }}"
                        >
                    </div>
                    
                    <!-- Search Type -->
                    <div class="col-md-3">
                        <label for="type" class="form-label">Search In</label>
                        <select class="form-select" id="type" name="type">
                            <option value="all" {% if search_type == 'all' %}selected{% endif %}>All</option>
                            <option value="boxes" {% if search_type == 'boxes' %}selected{% endif %}>Boxes Only</option>
                            <option value="items" {% if search_type == 'items' %}selected{% endif %}>Items Only</option>
                        </select>
                    </div>
                    
                    <!-- Category Filter -->
                    <div class="col-md-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">All Categories</option>
                            {% for cat in categories %}
                                <option value="{{ cat }}" {% if category_filter == cat %}selected{% endif %}>
                                    {{ cat }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            üîç Search
                        </button>
                        <a href="{{ url_for('search') }}" class="btn btn-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Results -->
        {% if query %}
            <!-- Boxes Results -->
            {% if search_type in ['all', 'boxes'] %}
                <div class="mb-4">
                    <h3>üì¶ Boxes ({{ boxes_results|length }})</h3>
                    
                    {% if boxes_results %}
                        <div class="row">
                            {% for box in boxes_results %}
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ box.name }}</h5>
                                            <p class="card-text">
                                                <strong>üéØ Position:</strong> {{ box.location or 'Not specified' }}<br>
                                                <strong>üì¶ Items:</strong> {{ box.item_count() }}<br>
                                                <strong>üí∑ Value:</strong> ¬£{{ "%.2f"|format(box.total_value()) }}
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a href="{{ url_for('view_box', box_id=box.id) }}" class="btn btn-sm btn-primary">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">No boxes found matching "{{ query }}"</p>
                    {% endif %}
                </div>
            {% endif %}
            
            <!-- Items Results -->
            {% if search_type in ['all', 'items'] %}
                <div class="mb-4">
                    <h3>üìã Items ({{ items_results|length }})</h3>
                    
                    {% if items_results %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Box</th>
                                        <th>Qty</th>
                                        <th>Category</th>
                                        <th>Value (¬£)</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in items_results %}
                                    <tr>
                                        <td>{{ item.name }}</td>
                                        <td>
                                            <a href="{{ url_for('view_box', box_id=item.box.id) }}">
                                                {{ item.box.name }}
                                            </a>
                                        </td>
                                        <td>{{ item.quantity }}</td>
                                        <td>{{ item.category or '‚Äî' }}</td>
                                        <td>¬£{{ "%.2f"|format(item.value) }}</td>
                                        <td>
                                            <a href="{{ url_for('edit_item', item_id=item.id) }}" class="btn btn-sm btn-warning">
                                                ‚úèÔ∏è Edit
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No items found matching "{{ query }}"{% if category_filter %} in category "{{ category_filter }}"{% endif %}</p>
                    {% endif %}
                </div>
            {% endif %}
            
            <!-- No Results -->
            {% if not boxes_results and not items_results %}
                <div class="alert alert-info">
                    <h5>No results found</h5>
                    <p>Try searching with different keywords or check your filters.</p>
                </div>
            {% endif %}
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">Enter a search term above to find boxes or items.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
